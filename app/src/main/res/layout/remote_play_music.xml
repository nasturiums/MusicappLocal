<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cloud_burst">

    <TextView
        android:id="@+id/text_remote_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/title_music_name"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/dp_4"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/text_remote_prev"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/text_remote_music_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/ic_prev" />

    <TextView
        android:id="@+id/text_remote_play"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/text_remote_music_name"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/text_remote_prev"
        android:background="@drawable/ic_play" />

    <TextView
        android:id="@+id/text_remote_next"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@+id/text_remote_music_name"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/text_remote_play"
        android:background="@drawable/ic_next" />
</RelativeLayout>
